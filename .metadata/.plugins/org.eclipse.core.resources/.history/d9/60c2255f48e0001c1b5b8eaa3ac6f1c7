import java.util.Scanner;

public class StringsProgram {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		System.out.println("Mad Libs\nThe Mad Inventor\n(story idea from Funny Fill-in National Geographic Kids)\n");
		
		System.out.println("Enter a noun: ");
		String word1 = scan.next();
		
		System.out.println("Another noun: ");
		String word2 = scan.next();
		
		System.out.println("Enter a relative's name: ");
		String word3 = scan.next();
		
		System.out.println("Enter a plural noun: ");
		String word4 = scan.next();
		
		System.out.println("Enter another plural noun: ");
		String word5 = scan.next();
		
		System.out.println("And one more plural noun: ");
		String word6 = scan.next();
		
		System.out.println("Enter an adverb, ending in ly: ");
		String word7 = scan.next();
		
		System.out.println("Enter an exclamation: ");
		String word8 = scan.next();
		
		System.out.println("Enter a verb, ending in ing: ");
		String word9 = scan.next();
		
		System.out.println("Enter an adjective: ");
		String word10 = scan.next();
		
		System.out.println("Enter a large number: ");
		String word11 = scan.next();
		
		System.out.println("Enter a celebrity name: ");
		String word12 = scan.next();
		
		System.out.println("Enter an adjective: ");
		String word13 = scan.next();
		
		System.out.println("Enter a verb, ending in ing: ");
		String word14 = scan.next();
		
		System.out.println("Enter a verb: ");
		String word15 = scan.next();
		
		System.out.println("Enter something slimy: ");
		String word16 = scan.next();
		
		System.out.println("Enter a noun: ");
		String word17 = scan.next();
		
		System.out.println("Enter a body part, plural: ");
		String word18 = scan.next();
		
		System.out.println("Enter a past-tense verb: ");
		String word19 = scan.next();
		

		
		System.out.println("I was going to be rich! I had just invented the first electric " + word1 + ". Using a(n) " + word2 + " from " + word3 + "’s toolbox, I built it out of old " + word4 + ", metal " + word5 + ", and rubber " + word6 + ". The first time I turned it on, the machine worked " + word7 + ". I couldn’t believe it! \“"+ word8 + "!\” I yelled, " + word9 + " up and down. I invited a(n) " + word10 + " billionaire to check out my invention. I couldn’t wait to sell it for " + word11 + " million dollars and live like " + word12 + ". But when I turned it on, something went terribly " + word13 + ". The machine started " + word14 + " and began to " + word15 + ". Suddenly it spewed " + word16 + " and shot slices of " + word17 + " in all directions. The billionaire started screaming at the top of his " + word18 + " and " + word19 + " out of my lab. Good thing I still get my weekly allowance.\r\n");
		 
	}

}
